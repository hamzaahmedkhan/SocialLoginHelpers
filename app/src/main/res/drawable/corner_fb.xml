<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/facebook_color" />
            <gradient android:angle="-90" android:startColor="@color/facebook_color" android:endColor="@color/facebook_color"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/facebook_color" />
            <solid android:color="@color/facebook_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="3dip" android:bottomLeftRadius="3dip" />

            <stroke android:width="1dip" android:color="@color/facebook_color" />
            <gradient android:angle="-90" android:startColor="@color/facebook_color" android:endColor="@color/facebook_color"  />
        </shape>
    </item>
</selector>